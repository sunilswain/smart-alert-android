<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OfflineActivity">

    <!-- Title showing offline status, larger font and centered -->
    <TextView
        android:id="@+id/offlineTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="You're Offline"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Passage explaining offline message, slightly larger font and center aligned -->
    <TextView
        android:id="@+id/offlineMessageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="You're currently offline. To report an emergency, please send an SMS with the following details."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offlineTitleTextView" />

    <!-- TextInputLayout with TextInputEditText for the SMS text field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/smsTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="SMS Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offlineMessageTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/smsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can mention your Emergency here"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Send SMS button -->
    <Button
        android:id="@+id/sendSmsButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Send SMS"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smsTextInputLayout" />

    <!-- Know What to Do Button -->
    <Button
        android:id="@+id/emergencyInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Know What to Do in Emergencies"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/darker_gray"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendSmsButton"
        android:onClick="showEmergencyInfo" />

    <!-- Scrollable CardView for emergency info -->
    <androidx.cardview.widget.CardView
        android:id="@+id/emergencyInfoCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emergencyInfoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Emergency Content Start -->
                <TextView
                    android:id="@+id/fireEmergencyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Case of Fire"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/fireEmergencyDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Stay calm.\n• Find the nearest exit.\n• Do not use elevators.\n• Call emergency services."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <!-- Tsunami Emergency -->
                <TextView
                    android:id="@+id/tsunamiEmergencyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Case of Tsunami"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tsunamiEmergencyDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Move to higher ground immediately.\n• Stay away from the coast.\n• Follow official warnings and alerts.\n• Avoid floodwaters and debris."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <!-- Animal Attack -->
                <TextView
                    android:id="@+id/animalAttackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Case of Animal Attack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/animalAttackDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Do not run.\n• Make yourself look bigger.\n• Stay calm and back away slowly.\n• If attacked, defend yourself."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <!-- Panic Attack -->
                <TextView
                    android:id="@+id/panicAttackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Case of Panic Attack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/panicAttackDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Sit in a comfortable position.\n• Focus on breathing slowly.\n• Reassure yourself: it's just temporary.\n• Call a friend or loved one if possible."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <!-- Close Button -->
                <Button
                    android:id="@+id/closeCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:onClick="hideEmergencyInfo" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Include the watermark/footer at the bottom -->
    <include
        layout="@layout/watermark_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
